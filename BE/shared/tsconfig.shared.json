{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": ".",
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  }
}
